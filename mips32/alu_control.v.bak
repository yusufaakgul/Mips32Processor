module alu_control (FF,OP,O);

input [5:0] FF; //function field
input [1:0] OP; //op code
output [2:0] O;

wire f2nw,   f1nw,f0nw;
wire op0nw;
wire and1w,and2w,and3w,and4w,      and5w, and6w;
//x2 icin
wire or1w,   or2w;
not not_1(f2nw,FF[2]);
and and_1 (and1w,OP[1],f2nw,FF[1]);
or or_1 (O[2],OP[0],and1w);

//x1 icin

not not_2 (f1nw,FF[1]);
not not_3 (f0nw,FF[0]);
not not_4 (op0nw,OP[0]);

and and_2 (and2w,FF[2],f1nw,FF[0]);
and and_3 (and3w,FF[2],f1nw,f0nw);

or or_1 (or1w,and2w,and3w);
and and_4 (and4w,or1w,OP[1],op0nw);
not not_5 (O[1],and4w);

//x0 icin

and and_5 (and5w,f1nw,FF[0]);
and and_6 (and6w,FF[1],f0nw);
or or_2 (or2w,and5w,and6w);
and and_7 (O[0],OP[1],FF[2],or2w);




endmodule